{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "Node",
        "alwaysStrict": true,
        // Build
        "outDir": "./dist",
        // Other
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true, 
        "skipLibCheck": true,
        "baseUrl": "./src/"
    }
}